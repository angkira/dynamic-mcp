{
  "extends": "../packages/typescript-config/vite.json",
  "compilerOptions": {
    "allowJs": false,
    "paths": {
      "@/*": ["./src/*"],
      "@dynamic-mcp/shared": ["../shared"],
      "@dynamic-mcp/shared/*": ["../shared/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../shared/types/**/*",
    "../shared/constants/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../shared/prisma-client/runtime/**"
  ]
}
