# Database Configuration
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=agentdb

# Database URLs (choose based on your setup)
# For Docker: use the container hostname 'db'
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}
# For local development: use localhost
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# AI Provider APIs (Get these from respective providers)
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-YOUR_OPENAI_API_KEY_HERE"
# Google Gemini API Key - Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"

# AI Model Configuration
# Choose your preferred model and provider
DEFAULT_MODEL=gemini-2.5-flash
# Options: "openai" or "google"
LLM_PROVIDER=google

# Application URLs (for development - usually don't change these)
VUE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# MCP Daemon Ports (internal communication - usually don't change these)
MCP_MEMORY_PORT=3001
MCP_API_PORT=3002

# Development settings
NODE_ENV=development

# Optional: Additional MCP Configuration
# MCP_ENABLE_DEBUG_LOGGING=false
# MCP_DEFAULT_TIMEOUT=10000
# MCP_MAX_CONCURRENT_CONNECTIONS=5
