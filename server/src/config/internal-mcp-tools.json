{
  "server": {
    "name": "dynamic-mcp-api",
    "version": "1.0.0",
    "description": "Internal MCP API for managing MCP servers and connections"
  },
  "tools": [
    {
      "name": "mcp_list_servers",
      "description": "üìã List all registered MCP servers with their connection status, capabilities, and configuration details",
      "parameters": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "number",
            "description": "User ID to filter servers for",
            "optional": true
          }
        }
      }
    },
    {
      "name": "mcp_create_server",
      "description": "‚ûï Register a new MCP server with connection configuration and capabilities",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the MCP server"
          },
          "version": {
            "type": "string",
            "description": "Version of the MCP server",
            "optional": true
          },
          "description": {
            "type": "string",
            "description": "Description of the MCP server",
            "optional": true
          },
          "transportType": {
            "type": "string",
            "enum": ["STDIO", "SSE", "STREAMABLE_HTTP"],
            "description": "Transport type for the MCP server"
          },
          "transportCommand": {
            "type": "string",
            "description": "Command to run the MCP server"
          },
          "transportArgs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Arguments for the transport command",
            "optional": true
          },
          "transportBaseUrl": {
            "type": "string",
            "description": "Base URL for HTTP-based transports",
            "optional": true
          },
          "authType": {
            "type": "string",
            "enum": ["NONE", "OAUTH", "APIKEY", "BEARER"],
            "description": "Authentication type",
            "optional": true
          },
          "authApiKey": {
            "type": "string",
            "description": "API key for authentication",
            "optional": true
          },
          "isEnabled": {
            "type": "boolean",
            "description": "Whether the server is enabled",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID that owns this server",
            "optional": true
          }
        },
        "required": ["name", "transportType", "transportCommand"]
      }
    },
    {
      "name": "mcp_update_server",
      "description": "‚úèÔ∏è Update an existing MCP server configuration, connection settings, or capabilities",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to update",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to update",
            "optional": true
          },
          "version": {
            "type": "string",
            "description": "New version",
            "optional": true
          },
          "description": {
            "type": "string",
            "description": "New description",
            "optional": true
          },
          "isEnabled": {
            "type": "boolean",
            "description": "Enable/disable the server",
            "optional": true
          },
          "transportCommand": {
            "type": "string",
            "description": "New transport command",
            "optional": true
          },
          "transportArgs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "New transport arguments",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        }
      }
    },
    {
      "name": "mcp_delete_server",
      "description": "üóëÔ∏è Permanently remove an MCP server and all its associated data",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to delete",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to delete",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        }
      }
    },
    {
      "name": "mcp_toggle_server",
      "description": "üîÑ Enable or disable an MCP server to control its availability for tool calls",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to toggle",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to toggle",
            "optional": true
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether to enable or disable the server"
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        },
        "required": ["enabled"]
      }
    },
    {
      "name": "mcp_connect_server",
      "description": "üîå Establish connection to an MCP server and test its availability",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to connect",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to connect",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        }
      }
    },
    {
      "name": "mcp_disconnect_server",
      "description": "üîå Disconnect from an MCP server while keeping its configuration",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to disconnect",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to disconnect",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        }
      }
    },
    {
      "name": "mcp_get_server_tools",
      "description": "üõ†Ô∏è Get all available tools from a specific MCP server with their schemas",
      "parameters": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Server ID to get tools from",
            "optional": true
          },
          "name": {
            "type": "string",
            "description": "Name of the server to get tools from",
            "optional": true
          },
          "userId": {
            "type": "number",
            "description": "User ID for authorization",
            "optional": true
          }
        }
      }
    }
  ],
  "resources": [
    {
      "uri": "mcp://config",
      "name": "MCP Configuration",
      "description": "Current MCP system configuration",
      "mimeType": "application/json"
    }
  ]
}
