# Fast development Dockerfile for server
FROM node:22-alpine
RUN apk add --no-cache dumb-init python3 make g++ libc6-compat

# Optional registry override and sensible npm network timeouts/retries for CI and slow networks
ARG NPM_REGISTRY
ENV npm_config_registry=${NPM_REGISTRY:-https://registry.npmjs.org/}
ENV npm_config_fetch_retries=5 \
    npm_config_fetch_retry_maxtimeout=120000 \
    npm_config_fetch_retry_mintimeout=2000 \
    npm_config_timeout=120000 \
    npm_config_audit=false \
    npm_config_fund=false \
    npm_config_cache=/tmp/.npm \
    npm_config_unsafe_perm=true

# Add user for security (same as prod)
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001

WORKDIR /app

# Copy package files for dependency caching
COPY package*.json ./
COPY server/package.json ./server/
COPY shared/package.json ./shared/
COPY packages/typescript-config/package.json ./packages/typescript-config/

# Install dependencies (prefer cached tarballs, but fall back if needed)
RUN npm ci --prefer-offline || npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Create dist directory and set proper permissions
RUN mkdir -p server/dist/mcp-servers && \
    chown -R nextjs:nodejs /app

USER nextjs

EXPOSE 3000
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]
