{
  "extends": "../packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@shared/prisma": ["../shared/prisma"],
      "@shared/prisma/*": ["../shared/prisma/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "../shared/prisma/**/*.js",
    "../shared/prisma/runtime/**"
  ]
}
